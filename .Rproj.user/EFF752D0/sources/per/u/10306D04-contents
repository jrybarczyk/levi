# Supondo que df seja seu dataframe
library(dplyr)
library(lubridate)
df <- dados
# Transforma a coluna Month para o formato de data
df$Month <- match(df$Month, month.abb)

# Cria uma coluna date combinando Year e Month
df$date <- with(df, paste(Year, Month, "01", sep = "-"))

# Converte a coluna date para o formato de data
df$date <- as.Date(df$date, format = "%Y-%m-%d")

# Ordena o dataframe pela coluna date
df <- df %>% arrange(date)

# Mostra as primeiras linhas do dataframe ordenado
head(df)

library(ggplot2)

# Gera o gráfico
ggplot(df, aes(x = date, y = Nb_of_downloads)) + 
  geom_line() + # Adiciona uma linha
  geom_point() + # Adiciona pontos
  scale_x_date(date_labels = "%b %Y", date_breaks = "1 month") + # Formata as datas no eixo x
  theme_bw() + # Usa um tema minimalista para o gráfico
  theme(axis.text.x = element_text(angle = 45, hjust = 1)) + # Inclina os rótulos do eixo x para melhor visualização
  labs(x = "Date", y = "Number of Downloads", title = "Downloads Over Time on Bioconductor.org") # Adiciona rótulos

